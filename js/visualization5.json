{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "GDP Compare In 2019 For 10 Countries",
  "autosize": "fit",
  "width": 700,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jiaqicheningrid/Assignment2/main/data/gdp_vs_economy.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country_Name",
        "oneOf": [
          "United States of America",
          "China",
          "Japan",
          "Germany",
          "India",
          "United Kingdom",
          "France",
          "Italy",
          "Brazil",
          "Canada"
        ]
      }
    }
  ],
  "layer": [
    {
      "selection": {
        "highlightCountry": {
          "type": "multi",
          "fields": ["Country_Name"],
          "bind": "legend"
        }
      },
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"labelAngle": 10}
        },
        "y": {
          "field": "GDP (millions)",
          "type": "quantitative",
          "title": "GDP (millions U$dollor)"
        },
        "color": {
          "field": "Country_Name",
          "type": "nominal",
          "legend": {"orient": "left"},
          "scale": {
            "domain": [
              "United States of America",
              "China",
              "Japan",
              "Germany",
              "India",
              "United Kingdom",
              "France",
              "Italy",
              "Brazil",
              "Canada"
            ],
            "range": [
              "#54278f",
              "#a50f15",
              "#f03b20",
              "gold",
              "#000000",
              "#fc9272",
              "slategray",
              "#fb9a99",
              "#7a0177",
              "#e7298a"
            ]
          }
        },
        "tooltip": [
          {"field": "Country_Name", "type": "nominal", "title": "Country"},
          {
            "field": "GDP (millions)",
            "type": "quantitative",
            "title": "GDP (millions U$dollor)",
            "format": "1s"
          }
        ],
        "opacity": {
          "condition": {"selection": "highlightCountry", "value": 0.8},
          "value": 0.2
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "line-top",
        "dx": -29,
        "dy": -20,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {
          "field": "Country_Name",
          "type": "nominal",
          "axis": {"labelAngle": 10}
        },
        "y": {
          "field": "GDP (millions)",
          "type": "quantitative",
          "title": "GDP (millions U$dollor)"
        },
        "text": {"field": "GDP (millions)", "type": "nominal", "format": "1s"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country_Name'] == 'China' || datum['Country_Name'] =='United States of America' || datum['Country_Name'] == 'Canada'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
