{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "World GDP per capita (2019) vs GDP By Population",
  "autosize": "fit",
  "width": 1000,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jiaqicheningrid/Assignment2/main/data/population_vs_economy.csv"
  },
  "params": [
    {
      "name": "Population",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 8000000,
        "max": 400000000,
        "step": 10000000,
        "name": "Population Filter: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "Country Name",
        "oneOf": [
          "United States of America",
          "China",
          "Japan",
          "Germany",
          "India",
          "United Kingdom",
          "France",
          "Italy",
          "Brazil",
          "Canada",
          "Russia",
          "Korea, Rep.",
          "Spain",
          "Australia",
          "Mexico",
          "Indonesia",
          "Netherlands",
          "Saudi Arabia",
          "Turkey",
          "Switzerland"
        ]
      }
    },
    {"filter": "datum.Population > Population"}
  ],
  "encoding": {
    "x": {
      "field": "GDP(million)",
      "type": "quantitative",
      "title": "GDP (millions U$dollor)",
      "axis": {"tickCount": 4}
    },
    "y": {
      "field": "GDP Per Capita (U$dollor)",
      "type": "quantitative",
      "title": "GDP Per Capita (U$dollor)",
      "axis": {"tickCount": 3}
    }
  },
  "layer": [
    {
      "selection": {
        "Country Name_highlight": {
          "type": "multi",
          "fields": ["Country Name"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000000, 500000000, 1000000000],
            "range": [300, 750, 1000, 1250, 1500]
          },
          "legend": {"orient": "bottom-right", "format": ".1s"}
        },
        "color": {
          "field": "Country Name",
          "type": "nominal",
          "legend": {"orient": "left"},
          "scale": {
            "domain": [
              "United States of America",
              "China",
              "Japan",
              "Germany",
              "India",
              "United Kingdom",
              "France",
              "Italy",
              "Brazil",
              "Canada",
              "Russia",
              "Korea, Rep.",
              "Spain",
              "Australia",
              "Mexico",
              "Indonesia",
              "Netherlands",
              "Saudi Arabia",
              "Turkey",
              "Switzerland"
            ],
            "range": [
              "#a50f15",
              "#54278f",
              "#f03b20",
              "#006d2c",
              "#000000",
              "#fc9272",
              "#08306b",
              "#fb9a99",
              "#7a0177",
              "#e7298a",
              "#02818a",
              "#810f7c",
              "#980043",
              "#e31a1c",
              "#253494",
              "#3f007d",
              "#fc4e2a",
              "#252525"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "Country Name_highlight", "value": 0.7},
          "value": 0.05
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Population",
            "type": "quantitative",
            "title": "Population",
            "format": "1s"
          },
          {
            "field": "GDP Per Capita (U$dollor)",
            "type": "quantitative",
            "title": "GDP Per Capita (U$dollor)"
          },
          {
            "field": "GDP(million)",
            "type": "quantitative",
            "title": "GDP (millions U$dollor)",
            "format": "1s"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "line-top",
        "dx": -20,
        "dy": -31,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Population", "type": "quantitative","format": "1s"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country Name'] == 'China' || datum['Country Name'] =='United States of America' || datum['Country Name'] == 'Switzerland'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country Name", "type": "nominal", "title": "Country"},
          {
            "field": "Population",
            "type": "quantitative",
            "title": "Population"
          },
          {
            "field": "GDP Per Capita (U$dollor)",
            "type": "quantitative",
            "title": "GDP PerCapita"
          },
          {
            "field": "GDP(million)",
            "type": "quantitative",
            "title": "GDP (millions U$dollor)",
            "format": "1s"
          }
        ]
      }
    }
  ],
  "config": {}
}
