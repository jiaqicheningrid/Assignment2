{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "The Change of World GDP per capita Between 2015 to 2019 For Top 5 Highest GDP Countries",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jiaqicheningrid/Assignment2/main/data/visualization3.csv"
  },
  "transform": [
    {
      "filter": {
        "field": "Country_Name",
        "oneOf": [
          "United States of America",
          "China",
          "Japan",
          "Germany",
          "India"
        ]
      }
    }
  ],
  "layer": [
    {
      "encoding": {
        "x": {
          "field": "Year",
          "timeUnit": "year",
          "type": "temporal",
          "title": "Year",
          "axis": {"tickCount": 4}
        },
        "y": {
          "field": "GDP_Per",
          "type": "quantitative",
          "title": "GDP Per Capita (U$dollor)",
          "axis": {"tickCount": 9}
        },
        "color": {"field": "Country_Name", "type": "nominal","legend": {"orient": "left"}},
        "opacity": {
          "condition": {"selection": "highlightCountry", "value": 1},
          "value": 0.2
        }
      },
      "layer": [
        {
          "selection": {
            "highlightCountry": {
              "type": "multi",
              "fields": ["Country_Name"],
              "bind": "legend"
            }
          },
          "mark": "line"
        },
        {
          "selection": {
            "labelLine": {
              "type": "single",
              "nearest": true,
              "on": "mouseover",
              "encodings": ["x"],
              "empty": "none"
            }
          },
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {"selection": "labelLine", "value": 1},
              "value": 0
            },"tooltip": [
          {
            "field": "Year",
            "type": "temporal",
            "title": "Year",
            "timeUnit": "year"
          },
          {"field": "GDP_Per", "type": "quantitative", "title": "GDP Per Capita (U$dollor)"}
        ]
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"selection": "labelLine"}}],
      "layer": [
        {
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {"x": {"type": "temporal", "field": "Year"}}
        },
        {
          "encoding": {
            "text": {"type": "quantitative", "field": "GDP_Per"},
            "x": {"type": "temporal", "field": "Year"},
            "y": {"type": "quantitative", "field": "GDP_Per"}
          },
          "layer": [
            {
              "mark": {"type": "text", "align": "left", "dx": 5, "dy": -7},
              "encoding": {
                "color": {"type": "nominal", "field": "Country_Name"}
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {}
}
